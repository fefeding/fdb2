{
  "name": "fdb2",
  "version": "1.0.0",
  "private": false,
  "type": "commonjs",
  "main": "view/index.html",
  "window": {
    "title": "数据库管理工具",
    "width": 1200,
    "height": 800,
    "min_width": 800,
    "min_height": 600,
    "resizable": true,
    "show_in_taskbar": true,
    "frame": true,
    "icon": "public/favicon.ico"
  },
  "scripts": {
    "start": "pm2 start server.js --name fdb2-server --disable-logs --",
    "restart": "pm2 restart fdb2-server --disable-logs --",
    "stop": "pm2 stop fdb2-server --",
    "dev": "vite",
    "build": "npm run build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build && npm run build-server",
    "build-server": "tsc -p tsconfig.server.json",
    "move-assets": "node move-assets.cjs",
    "type-check": "vue-tsc --noEmit --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "nw:dev": "node nw-dev.js",
    "nw:build": "node nw-build.js",
    "nw:build:win": "node nw-build.js --platform=win",
    "nw:build:osx": "node nw-build.js --platform=osx",
    "nw:build:linux": "node nw-build.js --platform=linux",
    "pkg:server": "cd d:/code/ycnull/db_tool && pkg dist/server/index.js -t node18-win-x64 -o dist/server/server.exe",
    "build:server:pkg": "ncc build server/index.ts -o dist/server/pkg"
  },
  "dependencies": {
    "@fefeding/common": "^1.0.58",
    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "express": "^5.2.1",
    "mysql2": "^3.15.3",
    "pg": "^8.16.3",
    "pm2": "^6.0.14",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@fefeding/eventemitter": "^1.0.4",
    "@fefeding/vite-nunjucks-plugin": "^1.0.1",
    "@popperjs/core": "^2.11.8",
    "@rollup/pluginutils": "^5.3.0",
    "@types/bootstrap": "^5.2.10",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.10.1",
    "@types/vue": "^2.0.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitejs/plugin-vue-jsx": "^5.1.2",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/core": "^13.9.0",
    "@zumer/snapdom": "^1.9.14",
    "autoprefixer": "^10.4.22",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "dotenv": "^17.2.3",
    "echarts": "^6.0.0",
    "exceljs": "^4.4.0",
    "js-cookie": "^3.0.5",
    "jsdom": "^26.1.0",
    "jszip": "^3.10.1",
    "nw": "^0.107.0",
    "nw-builder": "^4.17.0",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "postcss": "^8.5.6",
    "sass": "^1.94.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "latest",
    "vite-plugin-files-copy": "^3.8.0",
    "vitest": "^3.2.4",
    "vue": "^3.5.25",
    "vue-json-pretty": "^2.6.0",
    "vue-router": "^4.6.3",
    "vue-tsc": "^3.1.5",
    "vuex": "^4.1.0",
    
    "@codemirror/commands": "^6.10.1",
    "@codemirror/fold": "^0.19.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.11",
    "codemirror": "^6.0.2",
    "vconsole": "^3.15.1",
    "xlsx": "^0.18.5"
  },
  "bin": {
    "fdb2": "bin/fdb2.js"
  },
  "pkg": {
    "scripts": [
      "dist/server/**/*.js"
    ],
    "assets": [
      "dist/node_modules/**/*",
      "dist/client/**/*"
    ]
  }
}
